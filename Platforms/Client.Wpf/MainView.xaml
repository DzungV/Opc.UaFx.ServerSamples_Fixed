<Window x:Class="Client.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Window.DataContext>
    <local:MainViewModel />
  </Window.DataContext>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="2" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="20" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="2" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="20" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="2*" />
    </Grid.RowDefinitions>

    <Label Content="Address of Server:"
           HorizontalAlignment="Right"
           Grid.Column="1"
           Grid.Row="1" />

    <TextBox Grid.Column="2"
             Grid.Row="1"
             Margin="2"
             Width="200"
             Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

    <Label Content="{Binding AddressStatus}"
           Grid.Column="2"
           Grid.ColumnSpan="2"
           Grid.Row="3"
           MaxWidth="400" />

    <Label Content="Node to Subscribe:"
           HorizontalAlignment="Right"
           Grid.Column="1"
           Grid.Row="5" />

    <TextBox Grid.Column="2"
             Grid.Row="5"
             Margin="2"
             Width="200"
             Text="{Binding NodeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

    <Button Content="_Subscribe"
            Grid.Column="3"
            Grid.Row="5"
            MinWidth="80"
            Margin="2"
            Command="{Binding SubscribeCommand}" />

    <Label Content="{Binding NodeStatus}"
           Grid.Column="2"
           Grid.ColumnSpan="2"
           Grid.Row="7"
           MaxWidth="400" />

    <Label Content="Node Value:"
           HorizontalAlignment="Right"
           Grid.Column="1"
           Grid.Row="9" />

    <TextBox Grid.Column="2"
             Grid.Row="9"
             Margin="2"
             IsReadOnly="True"
             Width="200"
             Text="{Binding NodeValue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
  </Grid>
</Window>
